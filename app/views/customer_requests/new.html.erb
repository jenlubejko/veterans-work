<h1>Enter Work Request</h1>
<%= form_for @customer_request do |f| %>
  <div>
    <%= label_tag :address %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= label_tag :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= label_tag :state %>
    <%= f.text_field :state %>
  </div>
  <div>
    <%= label_tag :zipcode %>
    <%= f.text_field :zipcode %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= label_tag :expires_date %>
    <%= f.date_select :expires_date %>
  </div>
  <div>
    <%= f.select :service_category_id,
      options_from_collection_for_select(@categories, "id", "name"),
      prompt: "select type of work" %>
  </div>
  <%= submit_tag "Submit" %>
<% end %>
