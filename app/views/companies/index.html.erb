<h1>Company Information</h1>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <td>ID</td>
          <td>Name</td>
          <td>Email</td>
          <td>Zipcode</td>
          <td>Phone Number</td>
          <td>Description</td>
          <td>Website</td>
        </tr>
      </thead>
      <tbody>
      <% @companies.each do |company| %>
        <tr>
          <th><%= company.id %></th>
          <td>
            <a href='/companies/<%= company.id %>'>
              <%= company.name %>
            </a>
          </td>
          <td><%= company.email %></td>
          <td><%= company.shorten_zip_code %></td>
          <td><%= company.phone %></td>
          <td><%= company.description %></td>
          <td><%= company.url %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
